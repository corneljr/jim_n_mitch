<h2>Edit Birthday</h2>

<%= form_for [:admin, @birthday] do |f| %>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :name %>
		</div>
		<div class='form-input'>
			<%= f.text_field :name %>
		</div>
	</div>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :description %>
		</div>
		<div class='form-input'>
			<%= f.text_area :description %>
		</div>
	</div>
	<div class='form-item'>
		<%= f.submit 'Post' %>
	</div>
<% end %>