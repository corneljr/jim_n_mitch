<h2>New Podcast</h2>

<%= form_for [:admin, @podcast], html: { multipart: true } do |f| %>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :title %>
		</div>
		<div class='form-input'>
			<%= f.text_field :title %>
		</div>
	</div>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :podcast %>
		</div>
		<div class='form-input'>
			<%= f.file_field :podcast %>
		</div>
	</div>
	<div class='form-item'>
		<%= f.submit 'Create' %>
	</div>
<% end %>