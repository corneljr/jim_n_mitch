<h2>Edit Poll</h2>

<%= form_for @poll, html: { multipart: true } do |f| %>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :image %>
		</div>
		<div class='form-input'>
			<%= f.text_field :question %>
		</div>
	</div>
	<div class='form-item'>
		<%= fields_for :options do |r| %>
			<div class='form-label'>
				<%= r.label :option_text %>
			</div>
			<div class='form-input'>
				<%= f.text_field :option_text %>
			</div>
		<% end %>
		 <%= link_to_add_association 'add another image', f, :options, class: "btn-light-green-sm" %>
	</div>
		