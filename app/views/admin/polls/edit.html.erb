<h2>Edit Poll</h2>

<%= form_for [:admin, @poll], html: { multipart: true } do |f| %>
	<div class='form-item'>
		<div class='form-label'>
			<%= f.label :question %>
		</div>
		<div class='form-input'>
			<%= f.text_field :question %>
		</div>
	</div>
	<div class='form-item'>
		<%= fields_for :options do |r| %>
			<%= render 'option_fields', :f => r %>
		<% end %>
		 <%= link_to_add_association 'add another choice', f, :options %>
	</div>
	<div class='form-item'>
		<div class='form-input'>
			<%= f.submit 'Create' %>
		</div>
	</div>
<% end %>
		