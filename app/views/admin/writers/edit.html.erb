<h2><%= @writer.name %></h2>

<div class='form'>
	<%= form_for [:admin, @writer], html: {multipart: true} do |f| %>
		<div class='form-item'>
			<div class='form-label'>
				<%= f.label :avatar %>
			</div>
			<div class='form-input'>
				<%= f.file_field :avatar %>
			</div>
		</div>
		<div class='form-item'>
			<div class='form-label'>
				<%= f.label :name %>
			</div>
			<div class='form-input'>
				<%= f.text_field :name %>
			</div>
		</div>
		<div class='form-item'>
			<div class='form-label'>
				<%= f.label :bio %>
			</div>
			<div class='form-input'>
				<%= f.text_area :bio, class: 'ckeditor' %>
			</div>
		</div>
		<div class='form-item'>
			<div class='form-label'>
				<%= f.label :specialty %>
			</div>
			<div class='form-input'>
				<%= f.text_field :specialty %>
			</div>
		</div>
		<div class='form-item'>
			<%= f.submit 'Update' %>
		</div>
	<% end %>
</div>