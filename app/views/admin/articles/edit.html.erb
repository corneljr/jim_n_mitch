<h3><%= @article.title %></h3>
<h5><%= @article.author %></h5>

<%= form_for [:admin, @article] do |f| %>
	<div class='form-item'>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>
	<div class='form-item'>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class='form-item'>
		<%= f.label :author %>
		<%= f.select :author, options_for_select(['Anthony Rigato', "Peter Scholtes", 'James Lowe', 'Mitch Sharrard']) %>
	</div>
	<div class='form-item'>
		<%= f.label :category %>
		<%= f.select :category, options_for_select(['basketball', 'soccer', 'football', 'baseball', 'other']) %>
	</div>
	<div class='form=item'>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>
<% end %>
