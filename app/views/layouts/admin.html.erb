<!DOCTYPE html>
<html>
<head>
  <title>JimNMitch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<h2 class='admin-title'>Admin</h2>
	<header class='admin-header'>
		<ul class='admin-nav-links'>
			<li><%= link_to 'Articles', admin_articles_path, class: 'admin-nav' %></li>
			<li><%= link_to 'Writers', admin_writers_path, class: 'admin-nav' %></li>
			<li><%= link_to 'Podcast', admin_podcasts_path, class: 'admin-nav' %></li>
			<% if session[:user_id] %>
				<li><%= link_to 'Log out', admin_sessions_path, method: 'delete', class: 'admin-nav' %></li>
			<% end %>
		</ul>
	</header>

<%= yield %>

</body>
</html>
