<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "title", :title %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% articles.each do |article| %>
		<tr>
			<td><%= casein_table_cell_link article.title, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.author, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.category, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.body, casein_article_path(article) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_article_path(article), :method => :delete, :data => { :confirm => "Are you sure you want to delete this article?" }) %>
			</td>
		</tr>
	<% end %>
</table>