<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Bio", :bio %></th>
			<th><%= casein_sort_link "Specialty", :specialty %></th>
			<th><%= casein_sort_link "Avatar", :avatar %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% writers.each do |writer| %>
		<tr>
			<td><%= casein_table_cell_link writer.name, casein_writer_path(writer) %></td>
			<td><%= casein_table_cell_link writer.bio, casein_writer_path(writer) %></td>
			<td><%= casein_table_cell_link writer.specialty, casein_writer_path(writer) %></td>
			<td><%= casein_table_cell_link writer.avatar, casein_writer_path(writer) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_writer_path(writer), :method => :delete, :data => { :confirm => "Are you sure you want to delete this writer?" }) %>
			</td>
		</tr>
	<% end %>
</table>